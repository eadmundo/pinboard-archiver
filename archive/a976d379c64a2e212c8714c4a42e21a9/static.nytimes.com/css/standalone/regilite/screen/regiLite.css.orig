body {
	background-color: transparent;
}

/*interstitial ad wrapper module */
.regiliteDecorator{
  width: 351px;
  background-color: #fff;
}

.regiliteDecorator .box{
  border: 1px dashed #CCC;
}

.regiliteDecorator .sectionHeader{
  background: transparent url(/images/membercenter/graphic_saveupto.png) no-repeat left top;
  min-height: 32px;
  height: auto !important;
  height: 32px;
  font-size: 1.4em;
  font-weight: bold;
  line-height: 1.2857em;
  margin: 0 0 9px 0;
}

.inset{
  margin: 10px 10px 7px 10px;
}

.regiliteDecorator #regiLite .infoEntry{
  width: 268px;
}
/*end interstitial ad wrapper module */
.header {
	margin: 0 0 7px 0;
	padding: 0 0 0 0;
	font-family: arial, helvetica, sans-serif;
	font-size: 115%;
	font-weight: bold;
	}	

#regiLite:after {
	content: "."; 
	display: block; 
	height: 0; 
	clear: both; 
	visibility: hidden;
	}   

#regiLite {
	_height: 1%;
	}

#regiLite {
	margin: 0 0 0 0;
	padding: 0 0 0 0;
	}

#regiLite .icon {
	float: left;
	width: 50px;
	margin: 0 0 0 0;
	padding: 0 0 0 0;
	}
	
#regiLite .icon img {
	margin: 0 0 0 0;
	padding: 0 0 0 0;
	}	
	
#regiLite .infoEntry {
	text-align: left;
	float: left;
	width: 285px;
	margin: 0 0 0 0;
	padding: 0 0 0 0;
	}
	
#regiLite .infoEntry p {
	font-family: arial, helvetica, sans-serif;
	font-size: 80%;	
	_font-size: 86%;	
	margin: 0 0 0 0;
	padding: 0 0 0 0;
	}
	
#regiLite .infoEntry .privacy {
	margin: 0 0 0 0;
	padding: 5px 0 0 0;
	}		
	
#regiLite .infoEntry .signUp {
	font-family: arial, helvetica, sans-serif;
	font-size: 80%;	
	_font-size: 86%;
	display: block;
	}

#regiLite .sample {
	font-family: arial, helvetica, sans-serif;
	font-size: 80%;	
	_font-size: 86%;
	}
	
.infoEntry form label {
	font-family: arial, helvetica, sans-serif;
	font-size: 86%;	
	_font-size: 90%;
	color: #333;
	font-weight: bold;
	display: block;
	margin-bottom: 5px;
	}
	
.infoEntry form .yellow {
	font-family: arial, helvetica, sans-serif;
	font-size: 86%;	
	_font-size: 90%;
	font-weight: bold;
	color: #333;
	display: inline;
	margin: 5px 0 5px 0;
	padding: 1px;
	background: #fff8d9;
	}	
	
.infoEntry form input.regiTextInput {
	width: 180px;
	font-family: arial, helvetica, sans-serif;
	font-size: 86%;	
	_font-size: 90%;
	display: inline;
	_margin-top: 0;
	margin-bottom: 2px;
	_margin-bottom: 0;
	padding: 0 0 0 0;
	}  
	
.infoEntry .emailAddress {
	font-family: arial, helvetica, sans-serif;
	font-size: 86%;	
	_font-size: 90%;
	font-weight: bold;
	display: inline;
	margin: 5px 0 5px 0;
	color: #333;
	}	
	

	
.infoEntry form input.regiSubmit {
	display: inline;
	margin: 0 0 0 0;
	_margin: 0 0 0 5px;
	padding: 0 0 0 0;
	}
	
	
	
#regiLite .forgot {
	font-family: arial, helvetica, sans-serif;
	font-size: 80%;	
	_font-size: 86%;
	display: block;
	margin-top: 5px;
	}
	
	
